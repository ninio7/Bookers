<h1>Books</h1>
<h2>New book</h2>

<% if @book.errors.any? %>
 <%= @book.errors.count %>件のエラーが発生しました
 <ul>
 	<% @book.errors.full_messages.each do |message| %>
 	<li><%= message %></li>
 	<% end %>
 </ul>
 <% end %>


<%= form_with model: @book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
 
  <p>Body</p>
  <%= f.text_area :body %>
 
 <div><%= f.submit 'Create Book' %></div>
<% end %>
